# 数据库配置
DATABASE_URL="postgresql://username:password@localhost:5432/seo_platform"

# NextAuth.js 配置
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-nextauth-secret-key-here"

# AI 服务配置
OPENAI_API_KEY="your-openai-api-key-here"
OPENAI_ORG_ID="your-openai-org-id-here"

# Google OAuth (可选)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"

# GitHub OAuth (可选)
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# 邮件服务配置 (可选)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="587"
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-email-password"
SMTP_FROM="noreply@yoursite.com"

# 文件上传配置
UPLOAD_MAX_SIZE="10485760" # 10MB
UPLOAD_ALLOWED_TYPES="image/jpeg,image/png,image/webp,image/gif"

# Redis 配置 (可选，用于缓存)
REDIS_URL="redis://localhost:6379"

# 应用配置
APP_NAME="SEO内容生成平台"
APP_URL="http://localhost:3000"
APP_ENV="development"

# 分析和监控 (可选)
GOOGLE_ANALYTICS_ID="G-XXXXXXXXXX"
SENTRY_DSN="your-sentry-dsn"

# 支付配置 (可选)
STRIPE_PUBLIC_KEY="pk_test_..."
STRIPE_SECRET_KEY="sk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# 第三方API (可选)
UNSPLASH_ACCESS_KEY="your-unsplash-access-key"
PIXABAY_API_KEY="your-pixabay-api-key"

# 安全配置
ENCRYPTION_KEY="your-32-character-encryption-key"
JWT_SECRET="your-jwt-secret-key"

# 功能开关
ENABLE_REGISTRATION="true"
ENABLE_EMAIL_VERIFICATION="false"
ENABLE_SOCIAL_LOGIN="true"
ENABLE_PAYMENT="false"

# 限制配置
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000" # 15分钟

# 开发配置
NODE_ENV="development"
DEBUG="true"
LOG_LEVEL="info"

# 生产配置 (仅在生产环境使用)
# VERCEL_URL="your-vercel-url"
# DATABASE_URL="your-production-database-url"
# REDIS_URL="your-production-redis-url"