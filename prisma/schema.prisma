  PRO
  ENTERPRISE
}

enum UserStatus {
  ACTIVE
  SUSPENDED
  DELETED
}

enum ResetPeriod {
  DAILY
  WEEKLY
  MONTHLY
  YEARLY
}

enum ArticleType {
  REVIEW
  TOP_LIST
  COMPARISON
  GUIDE
  NEWS
}

enum ArticleStatus {
  DRAFT
  PUBLISHED
  ARCHIVED
  DELETED
}

enum TaskType {
  REVIEW
  TOP_LIST
  COMPARISON
  GUIDE
}

enum TaskStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  CANCELLED
}

enum SearchEngine {
  GOOGLE
  BAIDU
  BING
}

enum CompetitionLevel {
  LOW
  MEDIUM
  HIGH
}